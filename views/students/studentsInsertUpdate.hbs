<!-- Obtaining value from the students controller -->
<!DOCTYPE html>
<html>
<div>
<a class="btn btn-primary" href="/"><i class="fa fa-list-alt"></i>Home</a>
    <a class="btn btn-secondary" href="/students/list"><i class="fa fa-list-alt"></i> View All Students</a>
</div>
<h3>{{viewTitle}}</h3>
<form action="/students" method="POST">
<input type="hidden" name="_id" value="{{students._id}}">
<div class = "form-group">
<label>Access ID</label>
<input type="text" maxlength="100" class="form-control" name="accessId" placeholder="Access ID" value="{{students.accessId}}" required>
<div class="text-danger">
{{students.accessIdError}}</div>
</div>

<div class = "form-row">
<div class = "form-group col-md-6">
<label>First Name</label>
<input type="text" maxlength="100" class="form-control" name="firstName" placeholder="First Name" value="{{students.firstName}}" required>
<div class="text-danger">
{{students.firstNameError}}</div>
</div>
<div class = "form-group col-md-6">
<label>Last Name</label>
<input type="text" maxlength="100" class="form-control" name="lastName" placeholder="Last Name" value="{{students.lastName}}" required>
<div class="text-danger">
{{students.lastNameError}}</div>
</div>
</div>

<div class = "form-group">
<label>Date Of Birth</label>
<input type="text" maxlength="50" class="form-control" name="dob" placeholder="Date Of Birth" value="{{students.dob}}">
</div>

<div class = "form-group">
<label>Category</label>
<input type="text" maxlength="50" class="form-control" name="category" placeholder="Undergraduate or Graduate" value="{{students.category}}" required>
<div class="text-danger">
{{students.categoryError}}</div>
</div>

<div class = "form-group">
<label>Year</label>
<input type="number" maxlength="10" class="form-control" name="year" placeholder="Year" value="{{students.year}}" required>
<div class="text-danger">
{{students.yearError}}</div>
</div>

<div class = "form-group">
<label>Credits</label>
<input type="number" maxlength="50" class="form-control" name="courseDuration" placeholder="Credits" value="{{students.courseDuration}}" required>
<div class="text-danger">
{{students.courseDurationError}}</div>
</div>

<div class = "form-group">
<label>GPA</label>
<input type="text" maxlength="20" class="form-control" name="gpa" placeholder="Current GPA" value="{{students.gpa}}" required>
<div class="text-danger">
{{students.gpaError}}</div>
</div>
</div>


<div class="form-group", align="center">
<button type="submit" class="btn btn-primary"<i class="fa fa-database"></i> Submit</button>

</div>
</form>